<mvc:View controllerName="money.controller.Main" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
    xmlns:m="sap.m">
    <m:Page id="page" title="{i18n>title}">
        <m:content>
        	<Table
				rows="{dataModel>/}"
				rowActionCount="1"
				id="table"
				selectionMode="Single">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="가계부"/>
                        <m:ToolbarSpacer></m:ToolbarSpacer>
                        <m:Button text="생성" press="onCreate" type="Emphasized"></m:Button>
						<m:Button text="삭제" press="onDelete"></m:Button>
					</m:OverflowToolbar>
				</extension>
				<rowActionTemplate>
				<RowAction>
					<RowActionItem type="Navigation" press="onMove">
					</RowActionItem>
				</RowAction>
				</rowActionTemplate>
				<columns>
					
					<Column width="6rem" hAlign="End">
						<m:Label text="년월" />
						<template>
							<m:Label text="{dataModel>Yearmonth}" />
						</template>
					</Column>
					<Column width="9rem">
						<m:Label text="합계" />
						<template>
							<u:Currency stringValue="{dataModel>Amountsum}" currency="{dataModel>Unit}"/>
						</template>
					</Column>
				</columns>
			</Table>
        </m:content>
    </m:Page>
</mvc:View>
